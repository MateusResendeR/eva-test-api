generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique()
  password String
}

model Collaborator {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  journeys String[] @db.ObjectId
}

model Action {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  type     String
  journeys String[] @db.ObjectId
}

model Journey {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  actions       String[] @db.ObjectId
  collaborators String[] @db.ObjectId
  start_date    DateTime
}
